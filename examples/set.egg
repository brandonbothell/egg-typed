# since egg has no default scope, everything needs to be in a do() function.
do(
  # we define the variable x as the number 4.
  define(x, 4),
  # we create a function called setx, that takes in a var called value.
  define(setx, fun(val, 
    # like javascript, if x isn't in our localscope, we'll go up scopes until we find it.
    # we set x to val.
    set(x, val))
  ),
  # we call the setx function with the val as 50.
  setx(50),
  # we print x.
  print(x)
  # -> 50
)
